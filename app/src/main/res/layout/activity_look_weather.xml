        app:layout_constraintTop_toBottomOf="@+id/tvZemeText" />

    <TextView
        android:id="@+id/tvMesto"
        android:layout_width="295dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
